---
import {Button} from '../ui/button'
import {PROFILE} from "../../content/profileData";
import {Linkedin, Github, Mail, Youtube, Twitter, Rss, Book, PanelsTopLeft, Instagram} from 'lucide-react'
---

<div class="flex h-full w-full animate-appear">
  <div class="flex flex-col justify-between gap-4 md:max-h-[300px]">
    <div class="flex h-full flex-col">
      <!--<h6 class="m-0 text-sm font-light text-gray-500">-->
      <!--  @Vaibhav227-->
      <!--</h6>-->
      <p class="m-0 text-xl font-light">
        Hi, I'm
        <b class="font-bold">{PROFILE.name}</b>.
      </p>
      <ul class="pt-4 intro-links">
        {PROFILE.shortIntros.map((intro, index) => (
          <>
            {index === (PROFILE.shortIntros.length / 2)
              //when it is even number, and in the middle add an empty line

              ? <br/>
              :
              <></>
            }
            <li set:html={intro}></li>
          </>
        ))}
      </ul>
    </div>
    <div class="flex gap-4">
      <a href={PROFILE.links.github} aria-label="github profile" target="_blank">
        <Button aria-label="github profile">
          <Github/>
          <span class="sr-only">GitHub Profile</span>
        </Button>
      </a>
      
      
      {
        PROFILE.links?.bluesky && <a href={PROFILE.links.bluesky} aria-label="bluesky profile" target="_blank">
          <Button>
            <PanelsTopLeft/>
            <span class="sr-only">bluesky profile</span>
          </Button>
        </a>
      }
      {
        PROFILE.links?.twitter && <a href={PROFILE.links.twitter} aria-label="twitter profile" target="_blank">
          <Button>
            <Twitter/>
            <span class="sr-only">Twitter profile</span>
          </Button>
        </a>
      }

      {
        PROFILE.links?.goodreads && <a href={PROFILE.links.goodreads} aria-label="goodreads profile" target="_blank">
          <Button>
            <Book/>
            <span class="sr-only">Goodreads</span>
          </Button>
        </a>
      }
      {
        PROFILE.links?.linkedin && <a href={PROFILE.links.linkedin} aria-label="linkedin profile" target="_blank">
          <Button>
            <Linkedin/>
            <span class="sr-only">Linkedin</span>
          </Button>
        </a>
      }
      {
        PROFILE.links?.instagram && <a href={PROFILE.links.instagram} aria-label="instagram profile" target="_blank">
          <Button>
            <Instagram/>
            <span class="sr-only">Instagram</span>
          </Button>
        </a>
      }
      {
        PROFILE.links?.mail && <a href={PROFILE.links.mail} aria-label="mail" target="_blank">
          <Button>
            <Mail/>
            <span class="sr-only">Mail</span>
          </Button>
        </a>
      }
    </div>
  </div>
    <img
    src="/myprofile.webp"
    class="hidden lg:block rounded-lg pointer-events-none opacity-80"
    width="250px"
    height="100px"
    alt={`image of ${PROFILE.name}`}
  />
</div>

<style>
  .intro-links li a {
    color: var(--color-primary, #3182ce);
    text-decoration: underline;
    text-underline-offset: 2px;
    text-decoration-thickness: 1px;
    transition: text-decoration-thickness 0.2s ease, color 0.2s ease;
  }
  
  .intro-links li a:hover {
    color: var(--color-primary-hover, #2c5282);
    text-decoration-thickness: 2px;
  }
</style>

